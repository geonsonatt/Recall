{
  "name": "pdf-recall-desktop",
  "version": "0.1.0",
  "description": "Local-first PDF reader with highlights and export",
  "main": "app/main/main.js",
  "scripts": {
    "start": "electron .",
    "clean": "node scripts/clean-generated.mjs",
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "vite --config app/renderer/vite.config.mjs",
    "dev:electron": "wait-on tcp:5180 && env -u ELECTRON_RUN_AS_NODE -u ELECTRON_NO_ATTACH_CONSOLE -u GIO_MODULE_DIR -u GIO_EXTRA_MODULES -u GTK_PATH -u SNAP -u SNAP_NAME VITE_DEV_SERVER_URL=http://localhost:5180 LIBVA_DRIVER_NAME=none ELECTRON_ENABLE_LOGGING=1 electron . --no-sandbox --disable-gpu --disable-accelerated-video-decode --disable-features=VaapiVideoDecoder,VaapiVideoEncoder,UseChromeOSDirectVideoDecoder",
    "dev:electron:snap": "wait-on tcp:${RECALL_UI_SNAP_PORT:-5180} && env -u ELECTRON_RUN_AS_NODE -u ELECTRON_NO_ATTACH_CONSOLE -u GIO_MODULE_DIR -u GIO_EXTRA_MODULES -u GTK_PATH -u SNAP -u SNAP_NAME RECALL_UI_SNAP=1 VITE_DEV_SERVER_URL=${VITE_DEV_SERVER_URL:-http://localhost:${RECALL_UI_SNAP_PORT:-5180}} LIBVA_DRIVER_NAME=none electron . --no-sandbox --disable-gpu --disable-accelerated-video-decode --disable-features=VaapiVideoDecoder,VaapiVideoEncoder,UseChromeOSDirectVideoDecoder",
    "ui:snap": "node scripts/ui-snap.mjs",
    "build": "npm run build:renderer",
    "build:renderer": "vite build --config app/renderer/vite.config.mjs && node scripts/prune-dist.mjs",
    "dist": "npm run build && electron-builder --publish never",
    "dist:dir": "npm run build && electron-builder --dir",
    "test": "vitest run"
  },
  "keywords": [
    "electron",
    "pdf",
    "highlights",
    "offline"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "d3-scale": "^4.0.2",
    "d3-scale-chromatic": "^3.1.0",
    "pdf-lib": "^1.17.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@floating-ui/dom": "^1.7.5",
    "@fontsource-variable/manrope": "^5.2.8",
    "@pdftron/webviewer": "^11.11.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react-swc": "^3.11.0",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^9.2.1",
    "electron": "^40.6.0",
    "electron-builder": "^26.0.12",
    "fuse.js": "^7.1.0",
    "jsdom": "^26.1.0",
    "lucide": "^0.574.0",
    "pdfjs-dist": "^4.8.69",
    "split.js": "^1.6.5",
    "typescript": "^5.9.3",
    "vite": "^6.4.1",
    "vite-plugin-static-copy": "^3.2.0",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.5"
  },
  "build": {
    "appId": "com.recall.pdfdesktop",
    "productName": "PDF Recall Desktop",
    "npmRebuild": false,
    "buildDependenciesFromSource": false,
    "directories": {
      "output": "release"
    },
    "files": [
      "app/**/*",
      "dist/renderer/**/*",
      "package.json"
    ],
    "asar": true,
    "linux": {
      "target": [
        "AppImage"
      ],
      "artifactName": "${productName}-${version}.${ext}",
      "category": "Office"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "${productName}-${version}-setup.${ext}"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "artifactName": "${productName}-${version}.${ext}"
    }
  }
}
