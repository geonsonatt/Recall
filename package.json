{
  "name": "pdf-recall-desktop",
  "version": "0.1.0",
  "description": "Local-first PDF reader with highlights and export",
  "main": "app/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "vite --config app/renderer/vite.config.mjs",
    "dev:electron": "wait-on tcp:5180 && env -u ELECTRON_RUN_AS_NODE -u ELECTRON_NO_ATTACH_CONSOLE VITE_DEV_SERVER_URL=http://localhost:5180 electron . --disable-gpu",
    "build": "npm run build:renderer",
    "build:renderer": "vite build --config app/renderer/vite.config.mjs && node scripts/prune-dist.mjs",
    "dist": "npm run build && electron-builder --publish never",
    "dist:dir": "npm run build && electron-builder --dir",
    "release:manifest": "node scripts/generate-update-manifest.mjs",
    "test": "vitest run"
  },
  "keywords": [
    "electron",
    "pdf",
    "highlights",
    "offline"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "pdf-lib": "^1.17.1"
  },
  "devDependencies": {
    "electron": "^40.6.0",
    "electron-builder": "^26.0.12",
    "@floating-ui/dom": "^1.7.5",
    "@fontsource-variable/manrope": "^5.2.8",
    "@pdftron/webviewer": "^11.11.0",
    "concurrently": "^9.2.1",
    "fuse.js": "^7.1.0",
    "lucide": "^0.574.0",
    "pdfjs-dist": "^4.8.69",
    "split.js": "^1.6.5",
    "vite": "^6.4.1",
    "wait-on": "^8.0.5",
    "vite-plugin-static-copy": "^3.2.0",
    "vitest": "^3.2.4"
  },
  "build": {
    "appId": "com.recall.pdfdesktop",
    "productName": "PDF Recall Desktop",
    "npmRebuild": false,
    "buildDependenciesFromSource": false,
    "directories": {
      "output": "release"
    },
    "files": [
      "app/**/*",
      "dist/renderer/**/*",
      "package.json"
    ],
    "asar": true,
    "linux": {
      "target": [
        "AppImage"
      ],
      "artifactName": "${productName}-${version}.${ext}",
      "category": "Office"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "${productName}-${version}-setup.${ext}"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "artifactName": "${productName}-${version}.${ext}"
    }
  }
}
